float4 main(float2 coords				: TEXCOORD0,
		   uniform samplerRECT inputTex	: TEXUNIT0,
		   uniform float4 offset					):COLOR
{
	float4 x1 = texRECT(inputTex, coords);
	float4 x2 = texRECT(inputTex, coords+offset.xy);
	float4 output = x1;
	if ((coords.x < offset.z && offset.y == 0) || (coords.y < offset.w && offset.x == 0))
		output += x2;

	return output;
}
