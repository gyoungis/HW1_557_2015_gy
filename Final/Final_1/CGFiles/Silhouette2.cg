float4 main(float2 coords						: TEXCOORD0,
			uniform samplerRECT normalTexture  	: TEXUNIT0,
			uniform float4 data						) : COLOR
{
	float4 n4 = texRECT(normalTexture, coords);
	float3 n = n4.xyz;
	float3 v = data.xyz;
	float dotP = dot(n,v);
	float delta = data.w;
	float output = 0;
	if (dotP > -delta && dotP < delta)
		output = 1;
	return output;
}