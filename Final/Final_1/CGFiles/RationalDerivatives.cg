float4 main(float2 coords : TEXCOORD0,
			uniform samplerRECT surfaceTex	: TEXUNIT0,
			uniform samplerRECT dervTexture	: TEXUNIT1 ) : COLOR0
{
	float4 output;
	float4 derv		= texRECT(dervTexture,coords);
	float4 point	= texRECT(surfaceTex,coords);
	output.xyz		= (derv.xyz-derv.w*point.xyz/point.w)/point.w;
	output.w		= 0;
	return output;
}